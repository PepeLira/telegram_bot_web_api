<h2>Chats Available</h2>

<div class="card center" >
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>#</th>
            <th>Chat Name</th>
            <th>Chat_ID</th>
            <th>Link</th>
        </tr>
        </thead>
        <tbody>
        <% i = 1 %>
        <% @chats.each do |chat| %>
        <tr>
            <th scope="row"> <%= i %></th>
            <td><%= chat["chat_name"] %></td>
            <td><%= chat["chat_id"] %></td>
            <td><%= link_to "link", chat_board_path(chat["chat_id"]) %></td>
        </tr>
        <% i += 1 %>
        <% end %>
        </tbody>
    </table>
</div>
